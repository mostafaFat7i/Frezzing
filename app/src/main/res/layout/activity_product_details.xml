<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ProductDetailsActivity">

    <ImageView
        android:id="@+id/product_image_details"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/juicee"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round"
        android:layout_marginTop="240dp">
    <TextView
        android:id="@+id/details_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="@color/colorMAROON"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="@font/caviar_dreams_bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/details_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_product_name"
        android:text="Product Description"
        android:textColor="@color/colorMAROON"
        android:textStyle="italic"
        android:textSize="20sp"
        android:fontFamily="@font/caviardreams_italic"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/details_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_product_description"
        android:text="Product Price"
        android:textColor="@color/colorMAROON"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="@font/caviar_dreams_bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/number_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            app:textSize="16sp"
            app:backGroundColor="@color/colorMAROON"
            app:initialNumber="1"
            app:finalNumber="10"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/details_add_to_card_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorDARKRED"
            android:layout_alignParentBottom="true"
            android:text="Add to card"
            android:textStyle="bold"
            android:fontFamily="@font/caviar_dreams_bold"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            />


    </LinearLayout>
</RelativeLayout>