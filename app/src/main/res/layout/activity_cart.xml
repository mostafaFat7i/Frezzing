<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.CartActivity">

    <RelativeLayout
        android:id="@+id/cart_total_price_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorDARKRED"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/cart_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total price = "
            android:fontFamily="@font/caviar_dreams_bold"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/msg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        android:textAlignment="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:visibility="gone"
        android:text="Cart Empty"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cart_total_price_layout"
        android:layout_above="@+id/cart_next_process_btn"
        />

    <Button
        android:id="@+id/cart_next_process_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDARKRED"
        android:text="next"
        android:fontFamily="@font/caviar_dreams_bold"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        />


</RelativeLayout>