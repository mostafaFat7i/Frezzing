<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/product_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/product_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:fontFamily="@font/caviar_dreams_bold"
            android:textSize="22sp"
            android:layout_below="@+id/product_item_image"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="7dp"
            android:textStyle="bold"
            android:textColor="@color/colorCRIMSON"
            />
        <TextView
            android:id="@+id/product_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:textAlignment="center"
            android:padding="5dp"
            android:fontFamily="@font/caviardreams_italic"
            android:layout_below="@+id/product_item_name"
            android:textSize="18sp"
            android:textColor="@color/colorCRIMSON"
            />

        <TextView
            android:id="@+id/product_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:fontFamily="@font/caviar_dreams_bold"
            android:textAlignment="center"
            android:layout_below="@+id/product_item_description"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/colorCRIMSON"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>